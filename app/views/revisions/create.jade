.row
  .col-xs-12
    span.h5 Created
    span.h5.version Version {{revision.version}}
    button.btn.btn-warning(ng-click="revert(revision.version)") Revert
.row
  .col-xs-3
    dl.dl-horizontal
      dt User
      dd
        | {{revision.modifier.username}}
      dt Created at
      dd
        | {{revision.updatedAt|date:'MMM d, y h:mm:ss a'}}
  .col-xs-9
    pre
      | {{revision.modified|json}}

